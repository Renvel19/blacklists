{
  "pipeline": {
    "name": "BlacklistCI-V2",
    "roleArn": "arn:aws:iam::463470985984:role/CodePipelineServiceRole",
    "artifactStore": {
      "type": "S3",
      "location": "despliegues-devops"
    },
    "stages": [
      {
        "name": "Source",
        "actions": [
          {
            "name": "GitHubSource",
            "actionTypeId": {
              "category": "Source",
              "owner": "AWS",
              "provider": "CodeStarSourceConnection",
              "version": "1"
            },
            "configuration": {
              "ConnectionArn": "arn:aws:codeconnections:us-east-1:463470985984:connection/7f8e64eb-2a25-411a-99aa-898b02f255a7",
              "FullRepositoryId": "Renvel19/blacklists",
              "BranchName": "main"
            },
            "outputArtifacts": [
              { "name": "SourceArtifact" }
            ],
            "runOrder": 1
          }
        ]
      },
      {
        "name": "Build",
        "actions": [
          {
            "name": "BuildAction",
            "actionTypeId": {
              "category": "Build",
              "owner": "AWS",
              "provider": "CodeBuild",
              "version": "1"
            },
            "configuration": {
              "ProjectName": "BlacklistCI-V2"
            },
            "inputArtifacts": [
              { "name": "SourceArtifact" }
            ],
            "outputArtifacts": [
              { "name": "BuildArtifact" }
            ],
            "runOrder": 1
          }
        ]
      },
      {
        "name": "Deploy",
        "actions": [
          {
            "name": "ECS-BlueGreen-Deploy-Blacklist",
            "actionTypeId": {
              "category": "Deploy",
              "owner": "AWS",
              "provider": "CodeDeployToECS",
              "version": "1"
            },
            "configuration": {
              "ApplicationName":             "blacklists-cd-app",
              "DeploymentGroupName":         "blacklists-cd-dgp",

              "TaskDefinitionTemplateArtifact": "BuildArtifact",
              "TaskDefinitionTemplatePath":     "taskdef.json",

              "AppSpecTemplateArtifact":        "BuildArtifact",
              "AppSpecTemplatePath":            "appspec.json",

              "Image1ArtifactName":  "BuildArtifact",
              "Image1ContainerName": "blacklists-container"
            },
            "inputArtifacts": [
              { "name": "BuildArtifact" }
            ],
            "runOrder": 1
          }
        ]
      }
    ],
    "version": 1
  }
}
